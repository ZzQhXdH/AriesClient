<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/x10"
    app:cardElevation="@dimen/x30"
    android:layout_height="@dimen/y200">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y150"
        android:layout_gravity="start|center_vertical"
        android:text="名称"
        android:gravity="center"
        android:textSize="@dimen/x80"
        android:textColor="@android:color/holo_orange_light"
        android:layout_marginStart="@dimen/x25"
        android:id="@+id/id_item_free_text_view"
        />

    <Button
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/y150"
        android:layout_marginEnd="@dimen/x25"
        android:layout_gravity="end|center_vertical"
        android:text="免费获取"
        android:textSize="@dimen/x40"
        android:textColor="@android:color/holo_blue_bright"
        android:background="@drawable/selector_button_free_item"
        android:id="@+id/id_item_free_button"
        />

</android.support.v7.widget.CardView>