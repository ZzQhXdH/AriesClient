<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x900"
    android:layout_height="@dimen/y518"
    app:cardCornerRadius="@dimen/x25"
    app:cardElevation="@dimen/x5"
    android:id="@+id/id_item_frame_card_view">

    <ImageView
        android:id="@+id/id_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/id_item_text_view_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_shadow"
        android:gravity="center"
        android:text="@string/item_empty"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x80"
        android:visibility="gone" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/id_item_loading"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/y400"
        android:layout_gravity="center"
        android:clickable="false"
        app:indicatorColor="@android:color/holo_blue_bright"
        app:indicatorName="BallSpinFadeLoaderIndicator" />

</android.support.v7.widget.CardView>


